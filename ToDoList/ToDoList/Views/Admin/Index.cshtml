@model IEnumerable<ToDoList.Models.User>

@{
    ViewBag.Title = "Lista użytkowników";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Lista użytkowników
                </h3>
                <div class="right">
                    <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
                    <button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
                </div>
            </div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Login)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created_at)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role.Label)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Login)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created_at)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role.Label)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm delete-user" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section JavaScripts {
    <script src="@Url.Content("~/Scripts/calendar.js")"></script>
    <script>
        $(document).ready(function () {
            $('.delete-user').click(function (e) {
                if (!window.confirm("Czy na pewno chcesz usunąć użytkownika?")) {
                    e.preventDefault();
                }
            });
        });
    </script>
}