@model ToDoList.Models.ToDo

@{
    ViewBag.Title = "Add";
}

@section Stylesheet {
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                <div class="content">
                    <div class="header">
                        <p class="lead" style="text-align: center;">Dodaj notatkę</p>
                    </div>
                    @using (Html.BeginForm("Add", "ToDo", FormMethod.Post, new { @class = "form-auth-small col-md-6 col-md-offset-3" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control", placeholder = "Tytuł" } })
                                    @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 5, placeholder = "Opis" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Start_at, new { htmlAttributes = new { @class = "form-control date-picker", placeholder = "Data rozpoczęcia" } })
                                    @Html.ValidationMessageFor(model => model.Start_at, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.End_at, new { htmlAttributes = new { @class = "form-control date-picker", placeholder = "Data zakończenia" } })
                                    @Html.ValidationMessageFor(model => model.End_at, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-5">
                                    <input type="submit" value="Utwórz" class="btn btn-primary btn-lg btn-block">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Javascripts {
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
    <script>
        $(function () {
            // This will make every element with the class "date-picker" into a DatePicker element
            $('.date-picker').datepicker({ dateFormat: 'yy-mm-dd 00:00:00' });
        })
    </script>
}